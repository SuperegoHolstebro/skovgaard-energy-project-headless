{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext", // ✅ Allows ESM-style exports
    "moduleResolution": "bundler", // ✅ Disables the extension requirement
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noEmit": true,
    "target": "es2015",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
