{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
      "jsx": "react",
      "outDir": "dist",
      "rootDir": "src",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "module": "es2015",
      "moduleResolution": "bundler",
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "noEmit": true,
      "target": "es2015",
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }